<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">


  <com.hjq.shape.layout.ShapeLinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="30dp"
    android:orientation="vertical"
    app:shape_radius="5dp"
    app:shape_solidColor="@color/white">

    <TextView
      android:id="@+id/tv_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="20dp"
      android:text="@string/text_please_file_name"
      android:textColor="@color/title_color"
      android:textSize="22sp"
      android:textStyle="bold" />

    <com.hjq.shape.view.ShapeEditText
      android:id="@+id/tv_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginHorizontal="25dp"
      android:layout_marginTop="20dp"
      android:ellipsize="start"
      android:gravity="center_vertical"
      android:hint="@string/text_enter_the_file_name_here"
      android:maxLines="2"
      android:padding="8dp"
      android:textColor="@color/title_color_60"
      android:textSize="16sp"
      app:shape_radius="5dp"
      app:shape_solidColor="@color/theme_color_10" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <com.hjq.shape.view.ShapeTextView
        android:id="@+id/tv_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/text_cancel"
        android:textColor="@color/title_color_60"
        android:textSize="15sp"
        android:textStyle="bold"
        app:shape_radius="5dp"
        app:shape_strokeColor="#337a5de8"
        app:shape_strokeWidth="1dp" />

      <com.hjq.shape.view.ShapeTextView
        android:id="@+id/tv_sure"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/text_sure"
        android:textColor="@color/theme_color"
        android:textSize="15sp"
        android:textStyle="bold"
        app:shape_radius="5dp"
        app:shape_solidColor="#337a5de8" />
    </LinearLayout>

  </com.hjq.shape.layout.ShapeLinearLayout>


</FrameLayout>